<% if @user.errors.any? %>
  <div class="ui error message">
    <div class="header">
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    </div>
    <ul class="list">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :username, 'Your user name here' %><br><br>
  <%= f.text_field :username, class: 'form-control', placeholder: 'username goes here ...' %><br><br>
  <%= f.label :email, 'Your email here' %><br><br>
  <%= f.email_field :email, class: 'form-control', placeholder: 'example@example.com' %><br><br>
  <%= f.label :password, 'Your password here' %><br><br>
  <%= f.password_field :password, class: 'form-control' %><br><br>
  <%= f.submit "Create user" %>
<% end %>
